<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_flexible">


    <TextView
        android:id="@+id/tvWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="173dp"
        android:layout_marginTop="20dp"
        android:text="Workout"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/white"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/xAxisLabel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/white"
        android:text="@string/x_achse"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/xAxisValue"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="@string/no_value" />

    <TextView
        android:id="@+id/yAxisLabel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="@string/y_achse" />

    <TextView
        android:id="@+id/yAxisValue"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/white"
        android:text="@string/no_value" />

    <TextView
        android:id="@+id/zAxisLabel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/white"
        android:text="@string/z_achse" />

    <TextView
        android:id="@+id/zAxisValue"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/no_value"
        android:layout_marginStart="310dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/abril_fatface"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvWorkoutList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWorkout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:text="TextView"
        android:textColor="#FFA000"
        android:fontFamily="@font/abril_fatface"
        android:textSize="15sp" />


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="120dp"
        android:background="@color/white"
        android:layout_marginBottom="120dp" />

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circleProgress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:textColor="@color/white"
        android:fontFamily="@font/abril_fatface"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnStart_stop"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnReset"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint= "@color/pastelgreen"
        android:elevation="4dp"
        android:text="Start"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnFinish"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#4e4ed3"
        android:elevation="4dp"
        android:text="Reset"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/bottom_navigation_selector"
        android:elevation="4dp"
        android:text="Finish Workout"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


    <ProgressBar
        android:id="@+id/circleProgress"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="111dp"
        android:layout_height="187dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:progress="100"
        android:progressDrawable="@drawable/progress_circle" />


</RelativeLayout>